{
  "name": "vsoma",
  "displayName": "VSoma",
  "description": "An unofficial SomaFM radio player for Visual Studio Code",
  "homepage": "https://github.com/vascomfnunes/vsoma",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/vascomfnunes/vsoma.git"
  },
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "publisher": "vasco-nunes",
  "author": {
    "name": "Vasco Nunes",
    "email": "contact@vasco.dev",
    "url": "https://www.vasco.dev"
  },
  "bugs": {
    "url": "https://github.com/vascomfnunes/vsoma"
  },
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vsoma.play",
    "onCommand:vsoma.stop"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsoma.play",
        "title": "VSoma: Play"
      },
      {
        "command": "vsoma.stop",
        "title": "VSoma: Stop"
      }
    ],
    "configuration": {
      "title": "VSoma",
      "properties": {
        "vsoma.mpvPath": {
          "type": "string",
          "title": "Custom mpv path",
          "default": null,
          "markdownDescription": "Add a custom path with the `mpv` binary (e.g. `/opt/something/bin/mpv`). Leave this empty if your `mpv` is already in the `$PATH`."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^6.8.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "vsce": "^2.6.3"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "isbin": "^0.0.3",
    "node-cache": "^5.1.2",
    "trim": "^1.0.1",
    "typed-rest-client": "^1.8.6"
  }
}
